{
  "restApiRoot": "/api",
  "host": "0.0.0.0",
  "port": "$(PORT}",
  "remoting": {
    "context": false,
    "rest": {
      "handleErrors": true,
      "normalizeHttpPath": false,
      "xml": false
    },
    "json": {
      "strict": false,
      "limit": "100kb"
    },
    "urlencoded": {
      "extended": true,
      "limit": "100kb"
    },
    "errorHandler": {
      "disableStackTrace": true
    },
    "cors": false
  }
}
